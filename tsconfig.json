{
  "compilerOptions": {
    "target": "esnext",
    "types": ["node", "long"],
    "module": "nodeNext",
    "lib": ["es2022"],
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declaration": true,
    "removeComments": true
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/**/*.test.ts"]
}
